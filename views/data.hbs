<div class="py-4">
  <h2>Datos del perfil</h2>
  <hr class="w-50" />

  <!-- Formulario para actualizar datos -->
  <form action="/data?_method=PUT" method="POST">
    <div class="form-group row w-50 m-auto">
      <div class="form-group col-12 col-sm-6">
        <label>Email</label>
        <input
          class="form-control m-auto"
          type="email"
          value="{{email}}"
          name="email"
          readonly
        />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Nombre</label>
        <input
          class="form-control m-auto"
          type="text"
          value="{{user}}"
          name="nombre"
          required
        />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>AÃ±os de experiencia</label>
        <input
          class="form-control m-auto"
          type="number"
          value="{{anos_experiencia}}"
          name="anos_experiencia"
          required
        />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Especialidad</label>
        <input
          class="form-control m-auto"
          type="text"
          value="{{especialidad}}"
          name="especialidad"
          required
        />
      </div>
    </div>
    <div class="mb-1">
      <button class="btn btn-primary" type="submit">Actualizar</button>
    </div>
  </form>

  <!-- Formulario para eliminar cuenta -->
  <form action="/data?_method=DELETE" method="POST">
    <input
      class="form-control m-auto"
      type="hidden"
      value="{{id}}"
      name="id"
      required
    />
    <button class="btn btn-danger" type="submit">Eliminar cuenta</button>
  </form>
</div>

